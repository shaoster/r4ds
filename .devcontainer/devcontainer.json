// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
{
	"name": "R (rocker/r-ver base)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ghcr.io/rocker-org/devcontainer/tidyverse:4",

	// Ensure the package cache directory on the host machine exists.
	"preCreateCommand": "mkdir -p ${localEnv:HOME}${localEnv:USERPROFILE}/.local/share/renv/cache",
	// Set environment variables inside the container to use the mounted cache

	"containerEnv": {
		"RENV_PATHS_CACHE": "/renv/cache"
	},

	// Mount the host cache directory into the container
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.local/share/renv/cache,target=/renv/cache,type=bind,consistency=cached"
  ],

  // Set environment variables inside the container to use the mounted cache
  "containerEnv": {
    "RENV_PATHS_CACHE": "/renv/cache"
  },

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh .devcontainer/postCreateCommand.sh"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
